    <!-- Ball Image -->
    <ImageView
        android:id="@+id/imageview_scanresult_ball_image"
        android:layout_width="@dimen/scanresult_smartball_icon_size"
        android:layout_height="@dimen/scanresult_smartball_icon_size"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/smartball_image"
        android:contentDescription="@string/ball_ic_content"/>

    <!-- Name -->
    <TextView
        android:id="@+id/textview_scanresult_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@id/imageview_scanresult_ball_image"
        android:layout_centerVertical="true"
        android:text="DB0012098"
        android:textColor="@color/colorDkGray"
        android:textSize="@dimen/text_medium"/>

    <!-- Connection status -->
    <TextView
        android:id="@+id/textview_scanresult_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/textview_scanresult_name"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:textStyle="italic"
        android:text="@string/tap_to_connect"
        android:textColor="@color/colorVLtGray"
        android:textSize="@dimen/text_small"/>


