<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="arena.arenasmartball.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <!-- HUD -->
    <fragment
        android:id="@+id/fragment_hud"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hud_fragment_height"
        android:name="arena.arenasmartball.fragments.HUDFragment"
        tools:layout="@layout/fragment_hud"/>

    <!-- Placeholder for fragments -->
    <FrameLayout
        android:id="@+id/framelayout_content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>
